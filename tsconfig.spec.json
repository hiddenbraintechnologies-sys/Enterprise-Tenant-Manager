{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "server/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "client"
  ]
}
